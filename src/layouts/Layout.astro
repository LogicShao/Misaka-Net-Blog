---
// Misaka Network - Main Layout
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SearchModal from '../components/SearchModal.astro';
import {SITE_TITLE, SITE_DESCRIPTION} from '../consts';

interface Props {
  title?: string;
  description?: string;
  mainClass?: string;
  showFooter?: boolean;
}

const {
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  mainClass,
  showFooter = true,
} = Astro.props;
const resolvedMainClass = mainClass ?? 'flex-1 container mx-auto px-4 py-8 max-w-6xl';
---

<!doctype html>
<html lang="zh-CN">
<head>
  <BaseHead title={title} description={description}/>
</head>
<body class="min-h-screen flex flex-col" style="margin: 0; padding: 0;">

<!-- 缃戞牸鑳屾櫙灞?-->
<div class="grid-overlay" aria-hidden="true"></div>


<!-- 涓诲唴瀹瑰尯 -->
<Header/>

<main class={resolvedMainClass}>
  <slot/>
</main>

{showFooter && <Footer/>}

<!-- 鎼滅储妯℃€佹 -->
<SearchModal/>

</body>
</html>

