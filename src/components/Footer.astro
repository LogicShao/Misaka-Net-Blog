---
// Misaka Network - Footer Component
import {SITE_TITLE} from '../consts';
const today = new Date();
---

<footer class="mt-16 border-t backdrop-blur-sm"
        style="border-color: var(--border-color); background-color: var(--bg-secondary);">
    <div class="container mx-auto px-4 py-8 max-w-6xl">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
            <!-- 关于部分 -->
            <div>
                <h3 class="text-lg font-bold text-misaka-circuit mb-3 font-mono">
                    // MISAKA NETWORK
                </h3>
                <p class="text-sm leading-relaxed" style="color: var(--text-muted);">
                    科学实验日志与技术观测站
                    <br/>
                    <span class="text-misaka-blue">Level 5 - Railgun</span>
                </p>
            </div>

            <!-- 快速链接 -->
            <div>
                <h3 class="text-lg font-bold text-misaka-circuit mb-3 font-mono">
                    // Quick Links
                </h3>
                <ul class="space-y-2 text-sm">
                    <li>
                        <a href="/" class="hover:text-misaka-blue transition-colors" style="color: var(--text-muted);">
                            首页
                        </a>
                    </li>
                    <li>
                        <a href="/blog" class="hover:text-misaka-blue transition-colors"
                           style="color: var(--text-muted);">
                            博客
                        </a>
                    </li>
                    <li>
                        <a href="/friends" class="hover:text-misaka-blue transition-colors"
                           style="color: var(--text-muted);">
                            友链
                        </a>
                    </li>
                    <li>
                        <a href="/about" class="hover:text-misaka-blue transition-colors"
                           style="color: var(--text-muted);">
                            关于
                        </a>
                    </li>
                    <li>
                        <a href="/rss.xml" class="hover:text-misaka-blue transition-colors"
                           style="color: var(--text-muted);">
                            RSS 订阅
                        </a>
                    </li>
                </ul>
            </div>

            <!-- 系统状态 -->
            <div>
                <h3 class="text-lg font-bold text-misaka-circuit mb-3 font-mono">
                    // System Status
                </h3>
                <div class="space-y-2 text-sm">
                    <div class="flex items-center space-x-2">
                        <span class="w-2 h-2 bg-misaka-circuit rounded-full animate-pulse"></span>
                        <span style="color: var(--text-muted);">Network: <span class="text-misaka-circuit">Online</span></span>
                    </div>
                    <div class="flex items-center space-x-2">
                        <span class="w-2 h-2 bg-misaka-blue rounded-full animate-pulse"></span>
                        <span style="color: var(--text-muted);">Power: <span class="text-misaka-blue">100%</span></span>
                    </div>
                    <div class="font-mono text-xs mt-3" style="color: var(--text-muted);">
                        Built with Astro
                    </div>
                </div>
            </div>
        </div>

        <!-- 分隔线 -->
        <div class="divider-circuit"></div>

        <!-- 版权信息 -->
        <div class="text-center text-sm" style="color: var(--text-muted);">
            <p class="mb-2">
                &copy; {today.getFullYear()} {SITE_TITLE}. All rights reserved.
            </p>
            <p class="font-mono text-xs text-misaka-circuit/60">
                // Powered by Astro | Hosted on Cloudflare Pages
            </p>
        </div>
	</div>
</footer>
