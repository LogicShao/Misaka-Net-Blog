---
import type { ProfileInfo } from '../consts';

export interface Props {
    profile: ProfileInfo;
}

const { profile } = Astro.props;
---

<div class="network-panel overflow-hidden">
    <!-- 顶部装饰条 -->
    <div class="h-1 bg-gradient-to-r from-misaka-blue via-misaka-circuit to-misaka-accent"></div>

    <!-- 个人信息区 -->
    <div class="p-6">
        <!-- 头像和基本信息 -->
        <div class="flex items-start gap-4 mb-4">
            <div class="flex-shrink-0">
                <img
                    src={profile.avatar}
                    alt={profile.name}
                    class="w-20 h-20 rounded-full border-4 border-misaka-circuit/30 shadow-lg shadow-misaka-circuit/20 object-cover"
                />
            </div>
            <div class="flex-1 min-w-0">
                <h3 class="text-xl font-bold mb-1 text-glow" style="color: var(--text-primary);">
                    {profile.name}
                </h3>
                <p class="text-sm font-mono text-misaka-circuit mb-2">
                    {profile.bio}
                </p>
                {profile.location && (
                    <div class="flex items-center gap-1 text-sm" style="color: var(--text-secondary);">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                        </svg>
                        <span>{profile.location}</span>
                    </div>
                )}
            </div>
        </div>

        <!-- 电磁分隔线 -->
        <div class="flex items-center gap-2 my-4">
            <div class="flex-1 h-px bg-gradient-to-r from-transparent via-misaka-circuit/50 to-transparent"></div>
            <div class="w-2 h-2 bg-misaka-blue rounded-full animate-pulse"></div>
            <div class="flex-1 h-px bg-gradient-to-r from-transparent via-misaka-circuit/50 to-transparent"></div>
        </div>

        <!-- 社交链接 -->
        <div class="grid grid-cols-2 gap-2">
            {profile.github && (
                <a
                    href={profile.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-2 px-3 py-2 rounded-lg border-2 border-gray-200 dark:border-gray-700 hover:border-misaka-circuit hover:bg-misaka-circuit/10 transition-all duration-300 group"
                >
                    <svg class="w-5 h-5 text-gray-600 dark:text-gray-400 group-hover:text-misaka-circuit transition-colors" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
                    </svg>
                    <span class="text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-misaka-circuit transition-colors">GitHub</span>
                </a>
            )}

            {profile.email && (
                <a
                    href={`mailto:${profile.email}`}
                    class="flex items-center gap-2 px-3 py-2 rounded-lg border-2 border-gray-200 dark:border-gray-700 hover:border-misaka-blue hover:bg-misaka-blue/10 transition-all duration-300 group"
                >
                    <svg class="w-5 h-5 text-gray-600 dark:text-gray-400 group-hover:text-misaka-blue transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                    <span class="text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-misaka-blue transition-colors">Email</span>
                </a>
            )}

            {profile.bilibili && (
                <a
                    href={profile.bilibili}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-2 px-3 py-2 rounded-lg border-2 border-gray-200 dark:border-gray-700 hover:border-misaka-accent hover:bg-misaka-accent/10 transition-all duration-300 group"
                >
                    <svg class="w-5 h-5 text-gray-600 dark:text-gray-400 group-hover:text-misaka-accent transition-colors" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M17.813 4.653h.854c1.51.054 2.769.578 3.773 1.574 1.004.995 1.524 2.249 1.56 3.76v7.36c-.036 1.51-.556 2.769-1.56 3.773s-2.262 1.524-3.773 1.56H5.333c-1.51-.036-2.769-.556-3.773-1.56S.036 18.858 0 17.347v-7.36c.036-1.511.556-2.765 1.56-3.76 1.004-.996 2.262-1.52 3.773-1.574h.774l-1.174-1.12a1.234 1.234 0 0 1-.373-.906c0-.356.124-.658.373-.907l.027-.027c.267-.249.573-.373.92-.373.347 0 .653.124.92.373L9.653 4.44c.071.071.134.142.187.213h4.267a.836.836 0 0 1 .16-.213l2.853-2.747c.267-.249.573-.373.92-.373.347 0 .662.151.929.4.267.249.391.551.391.907 0 .355-.124.657-.373.906zM5.333 7.24c-.746.018-1.373.276-1.88.773-.506.498-.769 1.13-.786 1.894v7.52c.017.764.28 1.395.786 1.893.507.498 1.134.756 1.88.773h13.334c.746-.017 1.373-.275 1.88-.773.506-.498.769-1.129.786-1.893v-7.52c-.017-.765-.28-1.396-.786-1.894-.507-.497-1.134-.755-1.88-.773zM8 11.107c.373 0 .684.124.933.373.25.249.383.569.4.96v1.173c-.017.391-.15.711-.4.96-.249.25-.56.374-.933.374s-.684-.125-.933-.374c-.25-.249-.383-.569-.4-.96V12.44c0-.373.129-.689.386-.947.258-.257.574-.386.947-.386zm8 0c.373 0 .684.124.933.373.25.249.383.569.4.96v1.173c-.017.391-.15.711-.4.96-.249.25-.56.374-.933.374s-.684-.125-.933-.374c-.25-.249-.383-.569-.4-.96V12.44c.017-.391.15-.711.4-.96.249-.249.56-.373.933-.373Z"/>
                    </svg>
                    <span class="text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-misaka-accent transition-colors">Bilibili</span>
                </a>
            )}

            {profile.website && (
                <a
                    href={profile.website}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-2 px-3 py-2 rounded-lg border-2 border-gray-200 dark:border-gray-700 hover:border-misaka-circuit hover:bg-misaka-circuit/10 transition-all duration-300 group"
                >
                    <svg class="w-5 h-5 text-gray-600 dark:text-gray-400 group-hover:text-misaka-circuit transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                    </svg>
                    <span class="text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-misaka-circuit transition-colors">Website</span>
                </a>
            )}
        </div>
    </div>

    <!-- 底部电磁效果 -->
    <div class="h-1 bg-gradient-to-r from-misaka-accent via-misaka-circuit to-misaka-blue"></div>
</div>
