# EditorConfig is awesome: https://EditorConfig.org

# 顶级配置文件
root = true

# 所有文件的默认设置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown 文件（博客文章）
[*.{md,mdx}]
indent_style = space
indent_size = 2
# 保留 Markdown 中的尾随空格（用于强制换行）
trim_trailing_whitespace = false

# JavaScript/TypeScript 文件
[*.{js,mjs,cjs,ts,tsx,astro}]
indent_style = space
indent_size = 2

# JSON 文件
[*.{json,jsonc}]
indent_style = space
indent_size = 2

# YAML 文件
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# HTML/CSS 文件
[*.{html,css,scss}]
indent_style = space
indent_size = 2

# Package.json（保持 2 空格）
[package.json]
indent_style = space
indent_size = 2

# Makefile 必须使用 tab
[Makefile]
indent_style = tab
